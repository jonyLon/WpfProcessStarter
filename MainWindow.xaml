<Window x:Class="WpfProcessStarter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProcessStarter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ToolBar DockPanel.Dock="Top">
            <Label Margin="10">Enter program path:</Label>
            <TextBox Width="365" Margin="30,10" x:Name="line"></TextBox>
            <Button Click="Open">Open</Button>
        </ToolBar>
        <ToolBar >
            <Button Margin="30,10" Click="Paint" Content="Open Paint"/>
            <Button Margin="30,10" Click="Calc" Content="Open Calculator"/>
            <Button Margin="30,10" Click="Notepad" Content="Open Notepad"/>
        </ToolBar>
    </StackPanel>
</Window>
